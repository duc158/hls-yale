<% include ./partials/header.ejs %>

<!-- Main -->
  <div id="main">
    <div class="inner">
      <header>
        <% if (locals.user) { %>
          <p>
            Welcome, <%=locals.user.local.email%>.
            <a href="profile">Go to your profile</a> or <a href="/logout">Logout</a>
          </p>
        <% } else { %>
          <p>
            Etiam quis viverra lorem, in semper lorem. Sed nisl arcu euismod sit amet nisi euismod sed cursus arcu elementum ipsum arcu vivamus quis venenatis orci lorem ipsum et magna feugiat veroeros aliquam. Lorem ipsum dolor sit amet nullam dolore.
          </p>git
        <% } %>
      </header>
      <section class="tiles">
        <!-- phonebank -->
        <article class="style1">
          <span class="image">
            <img src="images/pic01.jpg" alt="" />
          </span>
          <a class="phonebank" href="#">
            <h2>Phonebank</h2>
            <div class="content">
              <p>The most comprehensive collection of Phone Bank.</p>
            </div>
          </a>
          <script type="text/javascript">
            $('a.phonebank').click(function(popup) {
              swal({
                title: "Insert your zipcode",
                text: "This will allow us to pre-populate candidates in your districts. Otherwise, click OK to see all phonebank.",
                type: "input",
                inputType: "text",
                allowEscapeKey: false,
                showCancelButton: false,
              }, function(zipcode) {
                window.location.href = '/phonebank/'+zipcode;
              });
            });
          </script>
        </article>
        <!-- donate -->
        <article class="style2">
          <span class="image">
            <img src="images/pic02.jpg" alt="" />
          </span>
          <a class="campaign" href="#">
            <h2>Donate</h2>
            <div class="content">
              <p>Make a donation to your local candidate.</p>
            </div>
          </a>
          <script type="text/javascript">
            $('a.campaign').click(function(popup) {
              swal({
                title: "Insert your zipcode",
                text: "This will allow us to pre-populate candidates in your districts. Otherwise, click OK to see all campaigns",
                type: "input",
                inputType: "text",
                allowEscapeKey: false,
                showCancelButton: false,
              }, function(zipcode) {
                window.location.href = '/campaign/'+zipcode;
              });
            });
          </script>
        </article>
      </section>
    </div>
  </div>

<% include ./partials/footer.ejs %>
