<% include ../partials/header.ejs %>

  <div class="main">
    <div class="inner">
      <h2>Add a New Phonebank</h2>

      <form action="/phonebank/add" method="POST">
        <!-- Candidate Name -->
        <div class="form-group row">
          <label for="candidateName" class="col-sm-2 col-form-label">Candidate Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="candidateName">
          </div>
        </div>
        <!-- Office Running -->
        <div class="form-group row">
          <label for="officeRunning" class="col-sm-2 col-form-label">Office Running</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="officeRunning">
          </div>
        </div>
        <!-- Political Party -->
        <div class="form-group row">
          <label for="politicalParty" class="col-sm-2 col-form-label">Political Party</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="politicalParty">
          </div>
        </div>
        <!-- Link -->
        <div class="form-group row">
          <label for="link" class="col-sm-2 col-form-label">Link</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="phonebankLink">
          </div>
        </div>
        <!-- Intended Date -->
        <div class="form-group row">
          <label for="intendedDate" class="col-sm-2 col-form-label">Intended Date</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="intendedDate">
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add Phonebank</button>
          </div>
        </div>
      </form>

    </div>
  </div>

<% include ../partials/footer.ejs %>
